{
  "name": "@hog-cli/hog",
  "version": "1.0.0",
  "description": "Personal command deck â€” unified task dashboard for GitHub Projects + TickTick",
  "author": "Ondrej Svec",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ondrej-svec/hog.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "hog": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run typecheck && npm run check && npm run test",
    "prepublishOnly": "npm run ci && npm run build"
  },
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cli",
    "ticktick",
    "github-projects",
    "task-manager",
    "dashboard",
    "tui",
    "agent-friendly",
    "command-deck"
  ],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.4.1",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.14",
    "@vitest/coverage-v8": "^3.0.0",
    "ink-testing-library": "^4.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@inquirer/prompts": "^8.2.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "ink": "^6.7.0",
    "react": "^19.2.4",
    "zod": "^4.3.6"
  }
}
